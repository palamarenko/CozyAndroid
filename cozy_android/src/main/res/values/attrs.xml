<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeView">
        <attr name="back_shape" format="enum">
            <enum name="None" value="0"/>
            <enum name="Circle" value="1"/>
            <enum name="Rectangle" value="2"/>
            <enum name="RoundRect" value="3"/>
        </attr>
        <attr name="corners_radius" format="dimension"/>
        <attr name="back_shape_color" format="color" />
        <attr name="back_shape_border" format="boolean"/>
        <attr name="back_shape_border_width" format="dimension" />
        <attr name="gradient_start_color" format="color"/>
        <attr name="gradient_end_color" format="color"/>
        <attr name="gradient_direction" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>
